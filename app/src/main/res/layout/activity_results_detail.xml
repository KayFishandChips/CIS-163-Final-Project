<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ajkayfishgmail.discount.resultsDetail"
    android:background="@color/primaryColor"
    >

    <Button
        android:id="@+id/call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Call"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:textSize="24sp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/warning_txt"
        android:background="@color/primaryColor"/>

    <Button
        android:id="@+id/nav_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Navigate"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:textSize="24sp"
        android:layout_above="@+id/warning_txt"
        android:background="@color/primaryColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bus_name_txt"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/call_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Did You Verify This Deal?"
        android:id="@+id/verify_txt"
        android:layout_above="@+id/verify_no"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/verify_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text=" It's true"
        android:drawableLeft="@android:drawable/checkbox_on_background"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/primaryColor"
        />

    <Button
        android:id="@+id/verify_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="It's false"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/primaryColor"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/discount_details"
        android:layout_below="@+id/bus_name_txt"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This Deal Is Unverified. We Recommend You Contact The Business To Confirm"
        android:id="@+id/warning_txt"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/call_button"
        android:layout_above="@+id/verify_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/phone_txt"
        android:layout_below="@+id/discount_details"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/discount_details" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/email_txt"
        android:layout_below="@+id/discount_details"
        android:layout_alignLeft="@+id/discount_details" />
</RelativeLayout>
