<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.ajkayfishgmail.discount.SubmitActivity"
                android:background="@color/primaryColor">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_field"
        android:layout_marginTop="87dp"
        android:hint="Name of location"
        android:layout_below="@+id/textView" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/discount_field"
        android:hint="Discount Description"
        android:layout_below="@+id/name_field" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Discount"
        android:id="@+id/submit_User_Data_Btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint ="Email"
        android:id="@+id/email_Box"
        android:layout_alignStart="@+id/Phone_box"
        android:layout_above="@+id/Phone_box" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Phone"
        android:ems="10"
        android:id= "@+id/Phone_box"

        android:layout_above="@+id/location_txt"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cata_spinner"
        android:text = "@+id/Category"
        android:hint = "Category"
        android:layout_toEndOf="@+id/retrieve_Btn"
        android:spinnerMode="dropdown" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cata2"
        android:layout_below="@+id/textView"
        android:hint = "Second Category"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The business location submitted will match your detected location. Please only submit a business while you are actualy at the location."
        android:id="@+id/location_txt"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/submit_User_Data_Btn"
        android:gravity="center_horizontal" />


</RelativeLayout>
